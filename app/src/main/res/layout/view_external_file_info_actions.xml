<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_bottom_sheet_separator" />

    <include
        android:id="@+id/fileView"
        layout="@layout/item_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginStandardSmall"
        android:layout_marginBottom="@dimen/marginStandardSmall" />

    <com.infomaniak.drive.ui.menu.MenuItemView
        android:id="@+id/openWith"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_open_with"
        app:title="@string/openWith"
        app:withArrow="false" />

    <com.infomaniak.drive.ui.menu.MenuItemView
        android:id="@+id/shareFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_share_file"
        app:title="@string/buttonSendCopy"
        app:withArrow="false" />

    <com.infomaniak.drive.ui.menu.MenuItemView
        android:id="@+id/saveToKDrive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_drive"
        app:title="@string/saveExternalFileTitle"
        app:withArrow="false" />

    <com.infomaniak.drive.ui.menu.MenuItemView
        android:id="@+id/print"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_print"
        app:title="@string/actionPrint"
        app:withArrow="false" />

</LinearLayout>
