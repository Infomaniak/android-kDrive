<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fileList.SortFilesBottomSheetDialog">

    <View
        android:layout_width="26dp"
        android:layout_height="@dimen/marginStandardVerySmall"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/marginStandardMedium"
        android:background="@drawable/background_bottom_sheet_anchor" />

    <TextView
        android:id="@+id/selectTitle"
        style="@style/Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginStandardMedium"
        tools:text="@string/sortTitle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="5"
        tools:listitem="@layout/item_select_bottom_sheet" />

</LinearLayout>
