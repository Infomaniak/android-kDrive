<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/progressLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/fileOffline"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:contentDescription="@string/buttonAvailableOffline"
        android:src="@drawable/ic_check"
        tools:layout_height="12dp"
        tools:layout_width="12dp" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/fileOfflineProgression"
        style="@style/CircularIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorSize="12dp"
        tools:indicatorSize="12dp" />
</FrameLayout>
