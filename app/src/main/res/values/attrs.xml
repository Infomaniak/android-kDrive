<resources>

    <declare-styleable name="CommonAttributes">
        <attr name="icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="FabBottomNavigationView">
        <attr name="cradle_vertical_offset" format="dimension" />
        <attr name="fab_cradle_margin" format="dimension" />
        <attr name="fab_cradle_rounded_corner_radius" format="dimension" />
        <attr name="fab_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RecyclerViewFastScroller">
        <attr name="trackDrawable" format="reference" />
        <attr name="handleDrawable" format="reference" />
        <attr name="popupDrawable" format="reference" />
        <attr name="popupTextStyle" format="reference" />
        <attr name="fastScrollEnabled" format="boolean" />
        <attr name="popupPosition" format="enum">
            <enum name="beforeTrack" value="0" />
            <enum name="afterTrack" value="1" />
        </attr>
        <attr name="addLastItemPadding" format="boolean" />
        <attr name="fastScrollDirection" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
        <attr name="handleWidth" format="dimension" />
        <attr name="handleHeight" format="dimension" />
        <attr name="handleHasFixedSize" format="boolean" />
        <attr name="supportSwipeToRefresh" format="boolean" />

        <attr name="trackMarginStart" format="dimension" />
        <attr name="trackMarginEnd" format="dimension" />

        <attr name="handleVisibilityDuration" format="integer" />

        <attr name="disableTrackTouch" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ProgressLayoutView">
        <attr name="progressLayoutIndicatorSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MenuItemView">
        <attr name="icon" />
        <attr name="title" format="string" />
        <attr name="withArrow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BottomSheetItemView">
        <attr name="icon" />
        <attr name="iconTint" format="color" />
        <attr name="text" format="string" />
    </declare-styleable>
</resources>
